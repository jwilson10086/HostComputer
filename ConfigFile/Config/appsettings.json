{
  "Environment": "Development",
  "Database": {
    "ConnectionString": "Data Source=Data/demo2.db",
    "CommandTimeout": 30,
    "EnableForeignKeys": true
  },
  "LoggingConfig": {
    "LogDirectory": "Logs",
    "LogFileName": "app.log",
    "EnableConsole": true,
    "MinLogLevel": "Debug",
    "MaxFileSizeMB": 10
  },
  "UI": {
    "FontSize": 14,
    "Theme": "Dark",
    "WindowWidth": 1200,
    "WindowHeight": 800,
    "ShowTitleBar": true,
    "CornerRadius": 4,
    "Language": "zh-CN"
  },
  "Security": {
    "EnableAutoLogin": false,
    "SessionTimeout": 30,
    "RequireStrongPassword": false
  }
}
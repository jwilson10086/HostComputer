<UserControl
    x:Class="CustomControls.Controls.WaferControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="150"
    Height="150">

    <UserControl.Resources>

        <!--  ◆ 1. 晶圆渐变：根据状态切换颜色  -->
        <SolidColorBrush x:Key="PreProcessColor" Color="#FF7A90A5" />
        <SolidColorBrush x:Key="ProcessingColor" Color="#FF3A77D2" />
        <SolidColorBrush x:Key="FinishedColor" Color="#FF4CAF50" />
        <SolidColorBrush x:Key="ErrorColor" Color="#FFD84343" />

        <!--  ◆ 2. 轻网格（ASML 风）  -->
        <DrawingBrush
            x:Key="WaferGridBrush"
            TileMode="Tile"
            Viewport="0,0,8,8"
            ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#05FFFFFF">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,8,8" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#10FFFFFF" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <LineGeometry StartPoint="0,0" EndPoint="8,8" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

    </UserControl.Resources>
    <Viewbox Stretch="Uniform">


        <Grid>
            <Ellipse
                x:Name="WaferEllipse"
                Width="140"
                Height="140"
                Stroke="#303030"
                StrokeThickness="1">
                <Ellipse.Fill>
                    <RadialGradientBrush RadiusX="0.9" RadiusY="0.9">
                        <GradientStop Offset="0" Color="#FFFFFFFF" />
                        <GradientStop Offset="0.35" Color="#FFE0E0E0" />
                        <GradientStop Offset="1" Color="#FF606060" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <!--  网格覆盖  -->
            <Ellipse
                Width="140"
                Height="140"
                Fill="{StaticResource WaferGridBrush}"
                Opacity="0.4" />

            <!--  状态覆盖颜色  -->
            <Ellipse
                x:Name="WaferColorOverlay"
                Width="140"
                Height="140"
                Opacity="0.45" />

            <!--  文字标签  -->
            <TextBlock
                x:Name="WaferText"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Wafer"
                TextAlignment="Center" />
        </Grid>
    </Viewbox>
</UserControl>

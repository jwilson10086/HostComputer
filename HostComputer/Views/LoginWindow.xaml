<Window    x:Class="HostComputer.Views.LoginWindow"    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:ba="clr-namespace:HostComputer.Common.Base"    xmlns:ctrl="clr-namespace:CustomControls.Helpers;assembly=CustomControls"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:local="clr-namespace:HostComputer.Views"    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:lang="clr-namespace:HostComputer.Common.Languages"    xmlns:vm="clr-namespace:HostComputer.ViewModels"    Title="系统登录"    AllowsTransparency="True"    Background="Transparent"    FontFamily="Microsoft YaHei"    FontWeight="ExtraLight"    ResizeMode="NoResize"    SizeToContent="WidthAndHeight"    WindowStartupLocation="CenterScreen"    WindowStyle="None">    <Window.Resources>        <Style x:Key="PassWordBoxStyle" TargetType="{x:Type PasswordBox}">            <Setter Property="Height" Value="50" />            <Setter Property="FontSize" Value="15" />            <Setter Property="Template">                <Setter.Value>                    <ControlTemplate>                        <Border                            x:Name="border"                            Margin="0,6"                            Background="White"                            BorderBrush="LightGray"                            BorderThickness="2"                            CornerRadius="5">                            <Grid>                                <Grid.ColumnDefinitions>                                    <ColumnDefinition Width="2*" />                                    <ColumnDefinition Width="8*" />                                </Grid.ColumnDefinitions>                                <TextBlock                                    HorizontalAlignment="Center"                                    VerticalAlignment="Center"                                    FontFamily="{DynamicResource iconfont}"                                    FontSize="18"                                    Foreground="LightGray"                                    Text="&#xe656;" />                                <Border                                    Margin="1,4"                                    BorderBrush="LightGray"                                    BorderThickness="0,0,2,0" />                                <TextBlock                                    Name="wafermask"                                    Grid.Column="1"                                    Margin="2,0"                                    HorizontalAlignment="Left"                                    VerticalAlignment="Center"                                    FontSize="14"                                    Foreground="LightGray"                                    Text="{lang:Lang 'Password'}"                                    Visibility="Collapsed" />                                <ScrollViewer                                    x:Name="PART_ContentHost"                                    Grid.Column="1"                                    MinHeight="20"                                    Margin="3,0"                                    HorizontalAlignment="Left"                                    VerticalAlignment="Center"                                    Focusable="False"                                    Foreground="Black"                                    HorizontalScrollBarVisibility="Hidden"                                    IsTabStop="False"                                    VerticalScrollBarVisibility="Hidden" />                            </Grid>                        </Border>                        <ControlTemplate.Triggers>                            <Trigger Property="IsEnabled" Value="False">                                <Setter TargetName="border" Property="Opacity" Value="0.56" />                            </Trigger>                            <Trigger Property="IsMouseOver" Value="True">                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />                            </Trigger>                            <Trigger Property="IsKeyboardFocused" Value="true">                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />                            </Trigger>                            <DataTrigger Binding="{Binding Path=UserViewModel.Password}" Value="">                                <Setter TargetName="wafermask" Property="Visibility" Value="Visible" />                            </DataTrigger>                        </ControlTemplate.Triggers>                    </ControlTemplate>                </Setter.Value>            </Setter>        </Style>        <ControlTemplate x:Key="CloseButton" TargetType="Button">            <Grid                Name="back"                Width="30"                Background="Transparent">                <TextBlock                    HorizontalAlignment="Center"                    VerticalAlignment="Center"                    FontFamily="{DynamicResource iconfont}"                    FontSize="14"                    Text="X" />            </Grid>            <ControlTemplate.Triggers>                <Trigger Property="IsMouseOver" Value="True">                    <Setter TargetName="back" Property="Background" Value="#DDD" />                </Trigger>            </ControlTemplate.Triggers>        </ControlTemplate>    </Window.Resources>    <Window.Triggers>        <EventTrigger RoutedEvent="Window.Loaded">            <BeginStoryboard>                <Storyboard>                    <DoubleAnimation                        Storyboard.TargetName="tt"                        Storyboard.TargetProperty="X"                        To="0"                        Duration="0:0:0.9" />                </Storyboard>            </BeginStoryboard>        </EventTrigger>    </Window.Triggers>    <Grid        Width="740"        Margin="5"        Background="Transparent"        MouseLeftButtonDown="Grid_MouseLeftButtonDown">        <Border            Width="330"            Margin="0,6"            HorizontalAlignment="Right"            Background="#F7F9FA"            BorderBrush="#DDD"            BorderThickness="2"            CornerRadius="0,5,5,0">            <Border.RenderTransform>                <TranslateTransform x:Name="tt" X="-320" />            </Border.RenderTransform>            <Grid Margin="80,0,10,13">                <Grid.RowDefinitions>                    <RowDefinition Height="30" />                    <RowDefinition Height="50" />                    <RowDefinition Height="20" />                    <RowDefinition Height="53*" />                    <RowDefinition Height="53*" />                    <RowDefinition Height="53*" />                    <RowDefinition Height="53*" />                    <RowDefinition Height="37*" />                    <RowDefinition MinHeight="40" />                </Grid.RowDefinitions>                <Button                    Margin="0,0,-10,0"                    HorizontalAlignment="Right"                    Command="{Binding CloseCommand}"                    CommandParameter="{Binding Path=., RelativeSource={RelativeSource AncestorType=Window}}"                    Content="X"                    Template="{StaticResource CloseButton}" />                <StackPanel Grid.Row="1">                    <TextBlock                        FontSize="22"                        Foreground="Black"                        Text="顶呱呱智慧平台" />                    <TextBlock Foreground="gray" Text="专注半导体湿制程设备产业投资与发展布局" />                </StackPanel>                <TextBox                    Grid.Row="3"                    Margin="0,5,0,20"                    ctrl:SoftKeyboard.IsEnabled="True"                    ctrl:SoftKeyboard.Mode="Full"                    helper:StyleHelper.IconFontSize="18"                    helper:StyleHelper.IconText="&#xe849;"                    helper:StyleHelper.MaskText="{lang:Lang 'Username'}"                    Style="{StaticResource TextBoxStyle}"                    Text="{Binding UserViewModel.UserName, UpdateSourceTrigger=PropertyChanged}" />                <PasswordBox                    Grid.Row="4"                    Margin="0,1,0,2"                    ba:PasswordBoxHelper.Attach="true"                    ba:PasswordBoxHelper.Password="{Binding UserViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                    ctrl:SoftKeyboard.IsEnabled="False"                    ctrl:SoftKeyboard.Mode="Full"                    CaretBrush="Black"                    Style="{StaticResource PassWordBoxStyle}" />                <CheckBox                    Grid.Row="5"                    VerticalAlignment="Center"                    Content="{lang:Lang 'Remember'}"                    IsChecked="{Binding IsEnable, Mode=TwoWay}"                      />                <TextBlock                    Grid.Row="5"                    Margin="188,0,0,0"                    HorizontalAlignment="Left"                    VerticalAlignment="Center">                    <!--Hyperlink>                        忘记密码                    </Hyperlink-->                </TextBlock>                <Button                    x:Name="btnLogin"                    Grid.Row="6"                    Margin="0,10,0,10"                    Background="#0253B7"                    Command="{Binding LoginCommand}"                    CommandParameter="{Binding Path=., RelativeSource={RelativeSource AncestorType=Window}}"                    Content="{lang:Lang 'Sign'}"                    FontSize="15">                    <Button.Style>                        <Style TargetType="Button">                            <Setter Property="Foreground" Value="White" />                            <!--  默认颜色  -->                            <Style.Triggers>                                <Trigger Property="IsMouseOver" Value="True">                                    <Setter Property="Foreground" Value="Black" />                                </Trigger>                            </Style.Triggers>                        </Style>                    </Button.Style>                </Button>                <TextBox                    Grid.Row="6"                    Grid.RowSpan="3"                    Margin="0,53,0,0"                    HorizontalContentAlignment="Center"                    VerticalContentAlignment="Top"                    Background="Transparent"                    BorderThickness="0,0,0,0"                    FontSize="16"                    Foreground="Red"                    IsReadOnly="True"                    Text="{Binding ErrorMessage}"                    TextWrapping="Wrap" />            </Grid>        </Border>        <Polygon HorizontalAlignment="Left" Points="0,0 420,0 450,200 420,400 0,400 ">            <Polygon.Fill>                <ImageBrush                    ImageSource="pack://application:,,,/HostComputer;component/Assets/Images/loginbg.png"                    Stretch="UniformToFill"                    Viewbox="0,0.01,0.97,1" />            </Polygon.Fill>            <Polygon.Effect>                <DropShadowEffect                    BlurRadius="10"                    Direction="320"                    Opacity="0.5"                    ShadowDepth="5"                    Color="Black" />            </Polygon.Effect>        </Polygon>    </Grid></Window>
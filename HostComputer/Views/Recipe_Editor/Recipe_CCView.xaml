<UserControl
    x:Class="HostComputer.Views.Recipe_Editor.Recipe_CCView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:CustomControls.Helpers;assembly=CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper"
    xmlns:lang="clr-namespace:HostComputer.Common.Languages"
    xmlns:local="clr-namespace:HostComputer.Views.Recipe_Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            BorderBrush="Gray"
            BorderThickness="0,0,3,0">
            <ItemsControl
                Grid.Row="0"
                Grid.Column="0"
                ItemsSource="{Binding Units}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="5" Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Vertical">
            <TextBox
                ctrl:SoftKeyboard.IsEnabled="False"
                ctrl:SoftKeyboard.Mode="Full"
                helper:StyleHelper.IconFontSize="18"
                helper:StyleHelper.IconText="&#xe610;"
                helper:StyleHelper.MaskText="模糊搜索"
                FontFamily="{StaticResource iconfont}"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding UserViewModel.UserName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid
                Grid.Row="0"
                Margin="5,10,0,0"
                AlternatingRowBackground="#2D2D30"
                AutoGenerateColumns="False"
                Background="#1E1E1E"
                Foreground="Black"
                HorizontalGridLinesBrush="#3F3F46"
                HorizontalScrollBarVisibility="Auto"
                ItemsSource="{Binding ParamRows}"
                RowBackground="#252526"
                VerticalGridLinesBrush="#3F3F46"
                VerticalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <!--  ITEM  -->
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Item}"
                        Header="ITEM"
                        IsReadOnly="True" />

                    <!--  Step 1  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Step1, UpdateSourceTrigger=PropertyChanged}"
                        Header="1" />

                    <!--  Step 2  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Step2, UpdateSourceTrigger=PropertyChanged}"
                        Header="2" />

                    <!--  Step 3  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Step3, UpdateSourceTrigger=PropertyChanged}"
                        Header="3" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="30"
                    Background="AliceBlue"
                    Content="之前插入步" />
                <Button
                    Width="80"
                    Height="30"
                    Background="AliceBlue"
                    Content="之后插入步" />
                <Button
                    Width="80"
                    Height="30"
                    Background="AliceBlue"
                    Content="删除步" />
            </StackPanel>
        </Grid>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe63c;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'New'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe696;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Edit'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe60e;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'ReName'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe6b2;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Save'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe640;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'SaveAs'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe6a3;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Delete'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe6a0;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Cancel'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe6af;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Copy'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe61c;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Reload'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe61e;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Export'}" />
            <Button
                Width="80"
                Margin="5"
                helper:StyleHelper.IconFontSize="30"
                Content="&#xe617;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                ToolTip="{lang:Lang 'Import'}" />
        </StackPanel>
    </Grid>
</UserControl>

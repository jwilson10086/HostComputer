<Window
    x:Class="HostComputer.ComponentConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:HostComputer.Common.Converter"
    xmlns:conv="clr-namespace:HostComputer.Common.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper"
    xmlns:local="clr-namespace:HostComputer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="650"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <c:DeviceItemConverter x:Key="dic" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <Style x:Key="ExpanderToggleButton" TargetType="ToggleButton">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border CornerRadius="3">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0" Color="#40ACF2" />
                                        <GradientStop Offset="1" Color="#005A9E" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid Height="26">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Width="4"
                                        Height="10"
                                        Margin="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="Gold"
                                        CornerRadius="2" />
                                    <ContentPresenter
                                        Margin="13,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        Name="arrow"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource iconfont}"
                                        RenderTransformOrigin="0.5,0.5"
                                        Text="&#xe6df;" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="arrow" Property="RenderTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="180" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Expander">
                <Setter Property="Margin" Value="0,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Expander">
                            <Border
                                x:Name="Content"
                                BorderThickness="1,0,1,1"
                                CornerRadius="3">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="Transparent" />
                                        <GradientStop Offset="1" Color="#3A3A3D" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition x:Name="ContentRow" Height="0" />
                                    </Grid.RowDefinitions>
                                    <ToggleButton
                                        Content="{TemplateBinding Header}"
                                        IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Style="{StaticResource ExpanderToggleButton}" />

                                    <ContentPresenter Grid.Row="1" Margin="4" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded" Value="True">
                                    <Setter TargetName="ContentRow" Property="Height" Value="{Binding Height, ElementName=Content}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="3">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="Transparent" />
                        <GradientStop Offset="0.3" Color="#0916a1ff" />
                        <GradientStop Offset="0.9" Color="#BBE1FE" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                Foreground="#40ACF2"
                Text="设备组态编辑" />

            <!--  编辑区域  -->
            <ItemsControl
                Grid.Column="1"
                AllowDrop="True"
                Background="Transparent"
                ItemsSource="{Binding DeviceList}">
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        <Setter Property="Panel.ZIndex" Value="{Binding Z}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl
                            Width="{Binding Width}"
                            Height="{Binding Height}"
                            Content="{Binding DeviceType, Converter={StaticResource dic}}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  组件列表  -->
            <ScrollViewer
                Grid.Column="0"
                Width="150"
                Margin="10,30,10,10"
                HorizontalAlignment="Left"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ThumbList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Header}" IsExpanded="True">
                                <ItemsControl ItemsSource="{Binding Children}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Name="b_1"
                                                Width="35"
                                                Height="35"
                                                Margin="3"
                                                Background="Orange"
                                                CornerRadius="5"
                                                Tag="{Binding}"
                                                ToolTip="{Binding Header}">
                                                <Border.InputBindings>
                                                    <MouseBinding
                                                        Command="{Binding DragDropCommand}"
                                                        CommandParameter="{Binding}"
                                                        MouseAction="LeftClick" />
                                                </Border.InputBindings>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--  属性表  -->
            <Border
                Grid.Column="2"
                Width="200"
                Margin="0,0,5,10"
                HorizontalAlignment="Right"
                Background="Transparent"
                CornerRadius="5">
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Border Margin="-10,0" CornerRadius="3">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#40ACF2" />
                                <GradientStop Offset="1" Color="#005A9E" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border
                        Width="4"
                        Height="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Gold"
                        CornerRadius="2" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="参数配置" />


                    <UniformGrid
                        Grid.Row="100"
                        Margin="0,3"
                        Rows="1">
                        <Button
                            Width="80"
                            Height="50"
                            helper:IconHelper.IconFontSize="28"
                            Command="{Binding SaveCommand}"
                            CommandParameter="{Binding ElementName=win}"
                            Content="&#xe69c;"
                            FontFamily="{DynamicResource iconfont}"
                            Style="{StaticResource ButtonStyle}"
                            ToolTip="保存" />
                        <Button
                            Height="50"
                            Margin="3,0"
                            helper:IconHelper.IconFontSize="28"
                            Command="{Binding CancelCommand}"
                            Content="&#xe6a0;"
                            FontFamily="{DynamicResource iconfont}"
                            Style="{StaticResource ButtonStyle}"
                            ToolTip="取消" />
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

<Window
    x:Class="HostComputer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ba="clr-namespace:HostComputer.Common.Converter"
    xmlns:beh="clr-namespace:HostComputer.Common.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:HostComputer.Common.Languages"
    xmlns:local="clr-namespace:HostComputer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper"
    Title="Equipment Host"
    Width="{DynamicResource DefaultWindowWidth}"
    Height="{DynamicResource DefaultWindowHeight}"
    FontSize="{DynamicResource Global.FontSize}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames
                        RepeatBehavior="Forever"
                        Storyboard.TargetName="txt_date"
                        Storyboard.TargetProperty="DataContext"
                        Duration="1:0:1">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static sys:DateTime.Now}" />
                        <DiscreteObjectKeyFrame KeyTime="1:0:0" Value="{x:Static sys:DateTime.Now}" />
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames
                        RepeatBehavior="Forever"
                        Storyboard.TargetName="txt_time"
                        Storyboard.TargetProperty="DataContext"
                        Duration="0:0:2">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static sys:DateTime.Now}" />
                        <DiscreteObjectKeyFrame KeyTime="0:0:1" Value="{x:Static sys:DateTime.Now}" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3E3E42" />
            <Setter Property="BorderBrush" Value="#5A5A5A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>

                            <!--  主要边框  -->
                            <Border
                                x:Name="Border"
                                Grid.ColumnSpan="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5" />

                            <!--  显示区域  -->
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="6,0,6,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                RecognizesAccessKey="True" />

                            <!--  ▼ 按钮（必须是 ToggleButton 且名称必须是 PART_DropDownButton）  -->
                            <ToggleButton
                                x:Name="PART_DropDownButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                ClickMode="Press"
                                Focusable="False"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <Path
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M 0 0 L 6 6 L 12 0 Z"
                                    Fill="White" />
                            </ToggleButton>

                            <!--  Popup 下拉列表  -->
                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">

                                <Border
                                    Padding="4"
                                    Background="#3E3E42"
                                    BorderBrush="#5A5A5A"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>

                            </Popup>
                        </Grid>

                        <!--  触发器  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A4A4F" />
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005A9E" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#777" />
                                <Setter TargetName="Border" Property="Background" Value="#2D2D30" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  下拉项风格  -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3E3E42" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border
                            x:Name="Bd"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#007ACC" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#005A9E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="MainMenuRadioButtonStyle"
            BasedOn="{StaticResource IconMenuRadioButtonStyle}"
            TargetType="RadioButton">
            <!--  固定尺寸  -->
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="80" />

            <!--  可选：防止被内部撑开  -->
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="MenuRadioButtonStyle"
            BasedOn="{StaticResource IconMenuRadioButtonStyle}"
            TargetType="RadioButton">
            <!--  固定尺寸  -->
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="80" />
            <!--  可选：防止被内部撑开  -->
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <ba:EqualityConverter x:Key="EqualityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>


    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!--  顶部工具栏  -->
            <RowDefinition Height="*" />
            <!--  主体内容  -->
            <RowDefinition Height="Auto" />
            <!--  底部一级菜单  -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!--  内容区  -->
            <ColumnDefinition Width="Auto" />
            <!--  二级菜单  -->
            <ColumnDefinition Width="Auto" />
            <!--  三级菜单  -->
        </Grid.ColumnDefinitions>

        <!--  顶部工具栏  -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Height="80"
            Background="Gray">
            <Grid.ColumnDefinitions>
                <!--  Logo 区域  -->
                <ColumnDefinition Width="80" />
                <!--  状态区  -->
                <ColumnDefinition Width="300" />
                <!--  实时事件  -->
                <ColumnDefinition Width="*" />
                <!--  语言切换  -->
                <ColumnDefinition Width="80" />
                <!--  报警  -->
                <ColumnDefinition Width="80" />
                <!--  蜂鸣器  -->
                <ColumnDefinition Width="80" />
                <!--  三色灯  -->
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <!--  左：Logo 方框  -->
            <Border
                Grid.Column="0"
                Width="78"
                Height="78"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="5">
                <Image Source="pack://application:,,,/HostComputer;component/Assets/Icons/AppIcon.ico" Stretch="Fill" />
            </Border>


            <!--  中左：4 列 × 3 行状态表格  -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Foreground="White"
                    Text="{lang:Lang 'USER'}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Foreground="LightGreen"
                    Text="{Binding Source={x:Static local:App.Session}, Path=UserName}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Foreground="White"
                    Text="{lang:Lang 'GROUP'}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Foreground="LightGreen"
                    Text="{Binding Source={x:Static local:App.Session}, Path=Group}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Foreground="White"
                    Text="{lang:Lang 'Level'}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Foreground="LightSkyBlue"
                    Text="{Binding Source={x:Static local:App.Session}, Path=Level}" />

                <!--  右两列你自行扩展  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Foreground="White"
                    Text="{lang:Lang 'Mode'}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Foreground="LightGreen"
                    Text="{Binding RunMode}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Foreground="White"
                    Text="{lang:Lang 'Recipe'}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Foreground="White"
                    Text="{Binding Recipe}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Foreground="White"
                    Text="{lang:Lang 'Alarm'}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Foreground="Red"
                    Text="{Binding AlarmState}" />
            </Grid>

            <!--  中右：实时事件消息框  -->
            <Border
                Grid.Column="2"
                Margin="5"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding EventMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="2"
                                    Foreground="White"
                                    Text="{Binding}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            <!--  报警  -->
            <Button
                Grid.Column="3"
                BorderBrush="Transparent"
                Command="{Binding AlarmCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Content="&#xe642;"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                helper:IconHelper.IconFontSize="30"
                Style="{StaticResource ButtonStyle}"
                ToolTip="报警" />
            <!--  蜂鸣器  -->
            <ToggleButton
                Grid.Column="4"
                BorderBrush="Transparent"
                Command="{Binding BellCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Content="&#xe643;"
                helper:IconHelper.IconFontSize="30"
                FontFamily="{StaticResource iconfont}"
                FontSize="18"
                Style="{StaticResource ToggleButtonStyle}"
                Tag="蜂鸣器" />
            <!--  最右：中英文切换与语言 Combo  -->
            <Button
                Grid.Column="5"
                Name="LanguageButton"
                FontSize="18"
                ToolTip="语言"
                Content="&#xe65e;"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#444"
                BorderBrush="#555"
                Command="{Binding ChangeLanguageCommand}"
                helper:IconHelper.IconFontSize="30"
                FontFamily="{StaticResource iconfont}"
                Foreground="White"
                Style="{StaticResource ButtonStyle}"
               />

            <!--  右侧竖向三色灯  -->
            <Border
                Grid.Column="6"
                Margin="2"
                Background="Transparent"
                CornerRadius="5">
                <StackPanel
                    Grid.Column="6"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Rectangle
                        Width="50"
                        Height="22"
                        Margin="1"
                        Fill="Red"
                        Stroke="Gray" />
                    <Rectangle
                        Height="22"
                        Margin="1"
                        Fill="Yellow"
                        Stroke="Gray" />
                    <Rectangle
                        Height="22"
                        Margin="1"
                        Fill="Green"
                        Stroke="Gray" />
                </StackPanel>
            </Border>

        </Grid>
        <!--  第二行：图标按钮栏  -->
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            VerticalAlignment="Bottom"
            Background="#3A3A3D">

            <!--  后退  -->
            <Button
                Name="Back"
                Margin="1"
                Command="{Binding DataContext.BackCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Style="{StaticResource IconButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Content="{lang:Lang 'Back'}" />
                </Button.ToolTip>

                <Viewbox Width="20" Height="15">
                    <Path
                        Data="M10,0 L0,10 L10,20"
                        Fill="White"
                        Stroke="White"
                        StrokeThickness="2" />
                </Viewbox>
            </Button>

            <!--  主界面  -->
            <Button
                Name="MainView"
                Margin="1"
                Command="{Binding DataContext.MainViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Style="{StaticResource IconButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Content="{lang:Lang 'MainView'}" />
                </Button.ToolTip>

                <Viewbox Width="20" Height="15">
                    <Path
                        Data="M0,10 L10,0 L20,10 L20,20 L0,20 Z"
                        Fill="White"
                        Stroke="White"
                        StrokeThickness="1" />
                </Viewbox>
            </Button>

            <!--  登录  -->
            <Button
                Name="Login"
                Margin="1"
                Command="{Binding DataContext.LoginCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Style="{StaticResource IconButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Content="{lang:Lang 'Sign'}" />
                </Button.ToolTip>

                <Viewbox Width="20" Height="15">
                    <Path
                        Data="M10,0 A5,5 0 1 1 9.99,0 M0,20 L20,20 L20,18 L0,18 Z"
                        Fill="White"
                        Stroke="White"
                        StrokeThickness="1" />
                </Viewbox>
            </Button>

            <!--  设置  -->
            <Button
                Name="Setting"
                Margin="1"
                Command="{Binding DataContext.SettingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Style="{StaticResource IconButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Content="{lang:Lang 'Set'}" />
                </Button.ToolTip>

                <Viewbox Width="20" Height="15">
                    <Path
                        Data="M10,0 L12,7 L20,10 L12,13 L10,20 L8,13 L0,10 L8,7 Z"
                        Fill="White"
                        Stroke="White"
                        StrokeThickness="1" />
                </Viewbox>
            </Button>

            <!--  退出  -->
            <Button
                Name="Excute"
                Margin="1"
                Command="{Binding DataContext.CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                Style="{StaticResource IconButtonStyle}">
                <Viewbox Width="20" Height="15">
                    <Path
                        Data="M0,0 L20,20 M20,0 L0,20"
                        Fill="White"
                        Stroke="White"
                        StrokeThickness="2" />
                </Viewbox>
            </Button>

            <Grid
                Margin="0,0,2,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!--  左：时间  -->
                    <ColumnDefinition Width="10" />
                    <!--  间隔  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  右：星期 + 日期  -->
                </Grid.ColumnDefinitions>

                <!--  左侧时间  -->
                <TextBlock
                    Name="txt_time"
                    Grid.Column="0"
                    VerticalAlignment="Bottom"
                    DataContext="{x:Static sys:DateTime.Now}"
                    FontFamily="{StaticResource timefont}"
                    FontSize="28"
                    Foreground="White">
                    <Run Text="{Binding Now, Mode=OneWay, StringFormat='HH:mm:ss'}" />
                </TextBlock>

                <!--  右侧 星期 + 日期  -->
                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <!--  星期  -->
                    <TextBlock
                        Name="txt_date"
                        DataContext="{x:Static sys:DateTime.Now}"
                        FontSize="12"
                        Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedValue, ElementName=LanguageComboBox}" Value="zh-CN">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="{Binding Now, Mode=OneWay, StringFormat='dddd', ConverterCulture=zh-CN}" />
                    </TextBlock>
                    <!--  星期  -->
                    <TextBlock
                        DataContext="{x:Static sys:DateTime.Now}"
                        FontSize="12"
                        Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedValue, ElementName=LanguageComboBox}" Value="en-US">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="{Binding Now, Mode=OneWay, StringFormat='dddd', ConverterCulture=en-US}" />
                    </TextBlock>

                    <!--  日期  -->
                    <TextBlock
                        DataContext="{x:Static sys:DateTime.Now}"
                        FontSize="12"
                        Foreground="White">
                        <Run Text="{Binding Now, Mode=OneWay, StringFormat='yyyy//MM//dd'}" />
                    </TextBlock>

                </StackPanel>
            </Grid>

        </DockPanel>

        <!--  内容区  -->
        <ContentControl
            x:Name="PageHost"
            Grid.Row="2"
            Grid.Column="0">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Grid.ColumnSpan" Value="1" />
                    <Style.Triggers>
                        <!--  当二级菜单存在，三级菜单为空  -->
                        <DataTrigger Binding="{Binding ThirdLevel.Count}" Value="0">
                            <Setter Property="Grid.ColumnSpan" Value="2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>


        <!--  底部一级菜单  -->
        <ItemsControl
            Grid.Row="3"
            Grid.ColumnSpan="3"
            ItemsSource="{Binding Menus}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Background="Gray" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton
                        Margin="1,2,8,2"
                        Command="{Binding DataContext.Menu1Command, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Content="{Binding Icon}"
                        FontFamily="{DynamicResource iconfont}"
                        FontSize="18"
                    
                        GroupName="NavGroup"
                        Style="{StaticResource MainMenuRadioButtonStyle}"
                        Tag="{Binding Title}">
                        <RadioButton.IsChecked>
                            <MultiBinding Converter="{StaticResource EqualityConverter}" Mode="OneWay">
                                <Binding Path="." />
                                <Binding Path="DataContext.SelectedMenu1" RelativeSource="{RelativeSource AncestorType=Window}" />
                            </MultiBinding>
                        </RadioButton.IsChecked>

                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  二级菜单  -->
        <ItemsControl
            Grid.Row="2"
            Grid.Column="2"
            Background="AliceBlue"
            ItemsSource="{Binding SecondLevel}">
            <ItemsControl.Style>
                <Style TargetType="ItemsControl">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SecondLevel.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.Style>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton
                        Margin="2,2,3,3"
                        Command="{Binding DataContext.Menu2Command, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Content="{Binding Icon}"
                        
                        FontFamily="{DynamicResource iconfont}"
                        Style="{StaticResource MenuRadioButtonStyle}"
                        Tag="{Binding Title}">
                        <RadioButton.IsChecked>
                            <MultiBinding Converter="{StaticResource EqualityConverter}" Mode="OneWay">
                                <Binding Path="." />
                                <Binding Path="DataContext.SelectedMenu2" RelativeSource="{RelativeSource AncestorType=Window}" />
                            </MultiBinding>
                        </RadioButton.IsChecked>
                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  三级菜单  -->
        <ItemsControl
            Grid.Row="2"
            Grid.Column="1"
            Background="AliceBlue"
            ItemsSource="{Binding ThirdLevel}">
            <ItemsControl.Style>
                <Style TargetType="ItemsControl">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ThirdLevel.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.Style>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton
                        Margin="2"
                        Command="{Binding DataContext.Menu3Command, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Content="{Binding Icon}"
                       
                        FontFamily="{DynamicResource iconfont}"
                        Style="{StaticResource MenuRadioButtonStyle}"
                        Tag="{Binding Title}">
                        <RadioButton.IsChecked>
                            <MultiBinding Converter="{StaticResource EqualityConverter}" Mode="OneWay">
                                <Binding Path="." />
                                <Binding Path="DataContext.SelectedMenu3" RelativeSource="{RelativeSource AncestorType=Window}" />
                            </MultiBinding>
                        </RadioButton.IsChecked>
                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</Window>

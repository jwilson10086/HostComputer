<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper;assembly=HostComputer"
    xmlns:lang="clr-namespace:HostComputer.Common.Languages">
    <!--  工业风配色方案  -->
    <SolidColorBrush x:Key="MainBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="PanelBackground" Color="#252526" />
    <SolidColorBrush x:Key="InputBackground" Color="#333337" />
    <SolidColorBrush x:Key="AccentColor" Color="#007ACC" />
    <!--  工业蓝  -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA" />
    <SolidColorBrush x:Key="BorderColor" Color="#454545" />
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource InputBackground}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Height" Value="50" />
        <Setter Property="CaretBrush" Value="{StaticResource AccentColor}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border
                        x:Name="border"
                        Margin="0,6"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="2"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource iconfont}"
                                FontSize="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helper:StyleHelper.IconFontSize)}"
                                Foreground="{StaticResource AccentColor}"
                                Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helper:StyleHelper.IconText)}" />
                            <Border
                                Margin="1,4"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,2,0" />
                            <TextBlock
                                Name="wafermask"
                                Grid.Column="1"
                                Margin="2,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="LightGray"
                                Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helper:StyleHelper.MaskText)}"
                                Visibility="Collapsed" />
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Grid.Column="1"
                                MinHeight="20"
                                Margin="3,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Panel.ZIndex="2"
                                Focusable="False"
                                Foreground="Black"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.56" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="true">
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource Mode=Self}}" Value="">
                            <Setter TargetName="wafermask" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

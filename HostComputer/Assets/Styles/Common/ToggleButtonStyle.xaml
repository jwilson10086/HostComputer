<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helper="clr-namespace:HostComputer.Assets.Styles.Helper;assembly=HostComputer">

    <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">

        <Setter Property="Background" Value="#3E3E42" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border
                        x:Name="Border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5">

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                            <!--  ICON  -->
                            <TextBlock
                                x:Name="Icon"
                                Margin="0,2,0,4"
                                HorizontalAlignment="Center"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helper:StyleHelper.IconFontSize)}"
                                Text="{TemplateBinding Content}" />

                            <!--  TEXT  -->
                            <TextBlock
                                x:Name="Text"
                                HorizontalAlignment="Center"
                                FontSize="{TemplateBinding FontSize}"
                                Text="{TemplateBinding Tag}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!--  悬停  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#007ACC" />
                        </Trigger>

                        <!--  选中  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#005A9E" />
                        </Trigger>

                        <!--  没文字就隐藏（兼容你原来的空占位）  -->
                        <Trigger Property="Tag" Value="">
                            <Setter Property="Visibility" Value="Hidden" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
